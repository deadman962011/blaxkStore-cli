     .col-sm-2
      <label for="PhoneNumI" > رقم الهاتف  </label>
     .col-sm-6
      input.form-control(type="text", name="PhoneNumI" required)

    .form-group
     .col-sm-2.col-sm-offset-4
       input.btn.btn-primary(type="submit", value="الدخول") 
      
  

 

