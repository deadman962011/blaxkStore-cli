  .col-sm-8.col-sm-offset-4
   form(method="post" class='form-horizontal')

    .form-group
     .col-sm-2
      label.label-control(for="UsernameI") الاسم الكامل:
     .col-sm-3
      input.form-control(type="text" name='FirstNameI' placeholder='الاسم الاول' required)
     .col-sm-3
      input.form-control(type="text" name='LastNameI' placeholder='الاسم الاخير' required)
      
     
    .form-group
     .col-sm-2
      label.label-control(for="UsernameI") اسم المستخدم:
